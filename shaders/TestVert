#version 420 core

layout(location = 0) in vec3 in_pos;

uniform mat4 viewMatrix;
uniform mat4 projectionMatrix;
uniform mat4 transformationMatrix;

void main()
{
	vec4 tVector = transformationMatrix * vec4(in_pos,1);

	vec4 tvVector = viewMatrix * tVector;

	vec4 tvpVector = projectionMatrix * tvVector;

	gl_Position = tvpVector;
}